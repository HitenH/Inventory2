@page "/login";

<PageTitle>Login</PageTitle>

<div class="d-flex justify-content-center">
    <EditForm EditContext="editContext" class="card-header" OnValidSubmit="SignIn">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label for="login-name" class="form-label">User Name</label>
            <InputText @bind-Value="loginModel.Name" id="login-name" class="form-control" />
        </div>
        <ValidationMessage For="@(() => loginModel.Name)" />
        <div class="mb-3">
            <label for="login-password" class="form-label">Password</label>
            <InputText type="password" @bind-Value="loginModel.Password" id="login-password" class="form-control" />
        </div>
        <ValidationMessage For="@(() => loginModel.Password)" />
        <div class="d-flex justify-content-between">
            <button type="submit" id="button-submit" class="btn btn-success">Login</button>
            <a class="btn btn-secondary" href="/">Close</a>
        </div>
    </EditForm>
</div>
