@page "/customers"
@using Inventory.Models;

<div class="d-flex justify-content-lg-between mb-3">
    <NavLink href="/customer" class="btn btn-secondary">Add New Customer</NavLink>
</div>

@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center">CustomerId</th>
                <th class="text-center">Name</th>
                <th class="text-center">Numbers</th>
                <th class="text-center">Area</th>
                <th class="text-center">Amount</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in customers.AsQueryable())
            {
                <tr>
                    <td class="text-center">@customer.CustomerId</td>
                    <td class="text-center">@customer.Name</td>

                    @if (customer.Numbers.Count == 0)
                    {
                        <td class="text-center">-</td>
                    }
                    else
                    {
                        <td class="text-center">@customer.Numbers.First().Phone</td>
                    }

                    <td class="text-center">@customer.Area</td>
                    <td class="text-center">-</td>
                    <td class="text-center"><a class="btn btn-secondary" href="customer/@customer.Id">Info</a></td>
                </tr>
            }
        </tbody>
    </table>
}
