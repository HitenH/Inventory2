@page "/customer/{customerId?}";
@attribute [Authorize];

<h2 class="d-flex justify-content-center mb-5">Customer</h2>

<EditForm EditContext="editContext" class="card-header mx-5"
          OnSubmit="async ()=>
                {
                    if(CustomerId == null){
                        await AddCustomer();
                }
                    else{
                        await UpdateCustomer();
                } }">
    <DataAnnotationsValidator />
    <div class="mb-2">
        <label for="name" class="form-label">Name</label>
        <InputText @bind-Value="customerModel.Name" id="name" class="form-control" />
    </div>
    <div class="mb-2">
        <label for="custid" class="form-label">CustomerId</label>
        <InputText @bind-Value="customerModel.CustomerId" id="custid" class="form-control" rows="3" />
    </div>
    <div class="mb-2">
        <label for="contact-person" class="form-label">ContactPerson</label>
        <InputText @bind-Value="customerModel.ContactPerson" id="contact-person" class="form-control" />
    </div>
    <div class="mb-2">
        <label for="address" class="form-label">Address</label>
        <InputText @bind-Value="customerModel.Address" id="address" class="form-control" />
    </div>
    <div class="mb-2">
        <label for="area" class="form-label">Area</label>
        <InputText @bind-Value="customerModel.Area" id="area" class="form-control" />
    </div>
    <div class="d-flex justify-content-between">
        @foreach (var number in customerModel.Mobiles)
        {
            <div class="mb-3">
                <label for="phone" class="form-label">Mobile</label>
                <InputText id="phone" @bind-Value="number.Phone" class="form-control" />
            </div>
        }
    </div>
    <div class="mb-3">
        <label for="remarks" class="form-label">Remarks</label>
        <InputTextArea @bind-Value="customerModel.Remarks" id="remarks" class="form-control" rows="3" />
    </div>
    <ValidationSummary />
    <button type="submit" id="button-submit" class="btn btn-success">Save</button>
    <NavLink type="button" href="/customers" id="button-close" class="btn btn-info ms-3">Close</NavLink>
    @if (CustomerId != null)
    {
        <button type="button" class="btn btn-danger ms-3" @onclick="DeleteCustomer">Delete</button>
    }
    <NavLink class="btn btn-secondary ms-3" href="/">Home</NavLink>
</EditForm>

<Modal @ref="modal" Title="Error Message">
    <BodyTemplate>
        <div class="card">
            <div class="card-body">
                @errorMessageShort
            </div>
            <button class="btn btn-light bg-white border border-secondary me-4" type="button"
                    @onclick="(e => isHideErrorMessage = !isHideErrorMessage)">
                @(isHideErrorMessage ? "Show Full" : "Hide")
            </button>
            @if (!isHideErrorMessage)
            {
                <div class="card-body bg-white mx-3 mb-1 mt-3">
                    @errorMessageFull
                </div>
            }
        </div>
    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">Close</Button>
    </FooterTemplate>
</Modal>